<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editKm"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Quilometragem Atual"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintHorizontal_bias="0.515" />

    <EditText
        android:id="@+id/editLitros"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Litros Abastecidos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editKm" />

    <EditText
        android:id="@+id/editData"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="dd/mm/aaaa"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/editLitros" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/editData"
        app:layout_constraintTop_toTopOf="@+id/editData"
        app:srcCompat="@android:drawable/ic_menu_today"
        app:layout_constraintLeft_toRightOf="@+id/editData"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.428" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editData"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editLitros"
        app:layout_constraintVertical_bias="0.785" />

    <Spinner
        android:id="@+id/spinnerPosto"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/editData"
        app:layout_constraintHorizontal_bias="0.515" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posto:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editData"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerPosto"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.857"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.051" />

    <Button
        android:id="@+id/button3"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:onClick="Adicionar"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="459dp" />
</android.support.constraint.ConstraintLayout>
